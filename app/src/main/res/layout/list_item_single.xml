<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/toky"
    android:padding="16dp">

    <Button
        android:id="@+id/makeAdmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="make admin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/makeEmployee"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/makeEmployee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="make employee"
        app:layout_constraintTop_toBottomOf="@+id/giveAccess"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/list_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/list_name"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/list_userType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/list_email"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/giveAccess"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Make User With Access"
        app:layout_constraintTop_toBottomOf="@+id/denyAccess"
        tools:layout_editor_absoluteX="6dp" />

    <Button
        android:id="@+id/denyAccess"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Make User Without Access"
        app:layout_constraintTop_toBottomOf="@+id/list_userType"
        tools:layout_editor_absoluteX="8dp" />
</androidx.constraintlayout.widget.ConstraintLayout>